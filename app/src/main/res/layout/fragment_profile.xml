<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.ProfileFragment"
    android:background="@drawable/bg_profile"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:paddingHorizontal="20dp"
        android:paddingVertical="20dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_centerVertical="true"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:src="@drawable/drawer_icon"
            android:layout_marginBottom="20dp"
            />

        <androidx.cardview.widget.CardView
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:cardCornerRadius="50dp"
            >

            <ImageView
                android:id="@+id/iv_prof_photo"
                android:padding="10dp"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_baseline_person_24"
                />

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:background="@drawable/bg_lr_profile"
            android:layout_marginTop="50dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/et_prof_fn"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Firstname"
                android:fontFamily="@font/monserrat"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E9EF"
                />

            <EditText
                android:id="@+id/et_prof_ln"
                android:padding="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Lastname"
                android:fontFamily="@font/monserrat"
                android:textSize="15sp"
                android:textColor="@android:color/black"
                android:background="@android:color/transparent"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E9EF"
                />

            <Spinner
                android:id="@+id/spinner_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/monserrat"
                android:padding="15dp"
                android:textColor="@android:color/black"
                android:textSize="15sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E3E9EF"
                />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_prof_update"
            app:cardCornerRadius="10dp"
            app:cardBackgroundColor="@android:color/holo_blue_bright"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <TextView
                android:textColor="@color/white"
                android:textSize="20sp"
                android:fontFamily="@font/monserrat"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update"
                />

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>